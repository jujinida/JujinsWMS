<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="jujin.Views.Inventory.InventoryStatisticsDetailPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#ECEFF4">
        <Border BorderBrush="#D8DEE9" BorderThickness="2" CornerRadius="5" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 제목과 뒤로가기 버튼 -->
                <Grid Grid.Row="0" Margin="30,20,30,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" Content="← 뒤로가기" Width="100" Height="35"
                            Background="#95A5A6" Foreground="White" BorderThickness="0"
                            Click="BackButton_Click"/>
                    
                    <TextBlock Grid.Column="1" Text="재고 통계 상세" FontSize="28" FontWeight="Bold" 
                               Foreground="#2E3440" VerticalAlignment="Center" Margin="20,0,0,0"/>
                </Grid>
                
                <!-- 품목 정보 -->
                <Grid Grid.Row="1" Margin="30,0,30,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="품목코드:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding ItemCode}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    
                    <TextBlock Grid.Column="2" Text="품목명:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <TextBlock Grid.Column="3" Text="{Binding ItemName}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    
                    <TextBlock Grid.Column="4" Text="카테고리:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <TextBlock Grid.Column="5" Text="{Binding Category}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </Grid>
                
                <!-- 차트 영역 -->
                <Grid Grid.Row="2" Margin="30,0,30,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 차트 제목 -->
                    <TextBlock Grid.Row="0" Text="재고 증감율 비교" FontSize="20" FontWeight="Bold" 
                               Foreground="#2E3440" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    
                    <!-- 바 차트 -->
                    <Grid Grid.Row="1" Background="White" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Y축 라벨 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="+30%" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="+25%" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="+20%" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="+15%" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="+10%" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="+5%" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="0%" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="7" Grid.Column="0" Text="-5%" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="8" Grid.Column="0" Text="-10%" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="9" Grid.Column="0" Text="-15%" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="10" Grid.Column="0" Text="-20%" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        
                        <!-- 격자선 -->
                        <Rectangle Grid.Row="0" Grid.Column="1" Height="1" Fill="#E0E0E0" VerticalAlignment="Bottom"/>
                        <Rectangle Grid.Row="1" Grid.Column="1" Height="1" Fill="#E0E0E0" VerticalAlignment="Bottom"/>
                        <Rectangle Grid.Row="2" Grid.Column="1" Height="1" Fill="#E0E0E0" VerticalAlignment="Bottom"/>
                        <Rectangle Grid.Row="3" Grid.Column="1" Height="1" Fill="#E0E0E0" VerticalAlignment="Bottom"/>
                        <Rectangle Grid.Row="4" Grid.Column="1" Height="1" Fill="#E0E0E0" VerticalAlignment="Bottom"/>
                        <Rectangle Grid.Row="5" Grid.Column="1" Height="1" Fill="#E0E0E0" VerticalAlignment="Bottom"/>
                        <Rectangle Grid.Row="6" Grid.Column="1" Height="1" Fill="#E0E0E0" VerticalAlignment="Bottom"/>
                        <Rectangle Grid.Row="7" Grid.Column="1" Height="1" Fill="#E0E0E0" VerticalAlignment="Bottom"/>
                        <Rectangle Grid.Row="8" Grid.Column="1" Height="1" Fill="#E0E0E0" VerticalAlignment="Bottom"/>
                        <Rectangle Grid.Row="9" Grid.Column="1" Height="1" Fill="#E0E0E0" VerticalAlignment="Bottom"/>
                        <Rectangle Grid.Row="10" Grid.Column="1" Height="1" Fill="#E0E0E0" VerticalAlignment="Bottom"/>
                        
                        <!-- 바 차트 -->
                        <Grid Grid.Row="0" Grid.Column="1" Height="30" Margin="10,0,10,0">
                            <Rectangle Fill="#3498DB" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <TextBlock Text="일별" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="White" FontWeight="Bold"/>
                        </Grid>
                        
                        <Grid Grid.Row="2" Grid.Column="1" Height="30" Margin="10,0,10,0">
                            <Rectangle Fill="#E74C3C" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <TextBlock Text="월별" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="White" FontWeight="Bold"/>
                        </Grid>
                        
                        <Grid Grid.Row="4" Grid.Column="1" Height="30" Margin="10,0,10,0">
                            <Rectangle Fill="#F39C12" Width="400" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <TextBlock Text="분기별" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="White" FontWeight="Bold"/>
                        </Grid>
                    </Grid>
                    
                    <!-- 범례 -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <Rectangle Width="20" Height="15" Fill="#3498DB" Margin="0,0,5,0"/>
                            <TextBlock Text="일별 증감율" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                            <Rectangle Width="20" Height="15" Fill="#E74C3C" Margin="0,0,5,0"/>
                            <TextBlock Text="월별 증감율" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="20" Height="15" Fill="#F39C12" Margin="0,0,5,0"/>
                            <TextBlock Text="분기별 증감율" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
