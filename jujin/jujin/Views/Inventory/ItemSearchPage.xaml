<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="jujin.Views.Inventory.ItemSearchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#ECEFF4">
        <Border BorderBrush="#D8DEE9" BorderThickness="2" CornerRadius="5" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 제목 -->
                <TextBlock Grid.Row="0" Text="품목 조회/수정" FontSize="28" FontWeight="Bold" 
                           Foreground="#2E3440" Margin="30,20,30,20"/>
                
                <!-- 검색 조건 -->
                <Grid Grid.Row="1" Margin="30,0,30,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="품목코드:" VerticalAlignment="Center" 
                               Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="ProductIdTextBox" Grid.Column="1" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                    
                    <TextBlock Grid.Column="2" Text="품목명:" VerticalAlignment="Center" 
                               Margin="20,0,10,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="ProductNameTextBox" Grid.Column="3" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                    
                    <TextBlock Grid.Column="4" Text="카테고리:" VerticalAlignment="Center" 
                               Margin="20,0,10,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="CategoryComboBox" Grid.Column="5" Height="35" VerticalContentAlignment="Center" Padding="10,0">
                        <ComboBoxItem Content="전체"/>
                        <ComboBoxItem Content="주류"/>
                        <ComboBoxItem Content="음료"/>
                        <ComboBoxItem Content="기타"/>
                    </ComboBox>
                    
                    <Button Grid.Column="7" Content="검색" Width="80" Height="35"
                            Background="#5E81AC" Foreground="White" BorderThickness="0"
                            Click="SearchButton_Click"/>
                </Grid>
                
                <!-- 결과 테이블 -->
                <Border Grid.Row="2" BorderBrush="#BDC3C7" BorderThickness="1" Margin="30,0,30,30">
                    <DataGrid x:Name="ItemDataGrid" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA" RowBackground="White"
                              MouseDoubleClick="ItemDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="품목코드" Binding="{Binding ProductId}" Width="100"/>
                            <DataGridTextColumn Header="품목명" Binding="{Binding ProductName}" Width="200"/>
                            <DataGridTextColumn Header="카테고리" Binding="{Binding Category}" Width="100"/>
                            <DataGridTextColumn Header="가격" Binding="{Binding Price, StringFormat={}{0:#,##0}원}" Width="120"/>                            
                            <DataGridTemplateColumn Header="작업" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="수정" Width="60" Height="25" 
                                                Background="#5E81AC" Foreground="White" BorderThickness="0"
                                                Click="EditButton_Click" Tag="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
