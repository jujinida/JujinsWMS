<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="jujin.Views.Inventory.ItemRegistrationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#ECEFF4">
        <Border BorderBrush="#D8DEE9" BorderThickness="2" CornerRadius="5" Margin="10">
            <Grid Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
              
                <!-- 왼쪽: 제품 이미지 등록 섹션 -->
                <Border Grid.Column="0" BorderBrush="#D8DEE9" BorderThickness="1" CornerRadius="5" 
                        Background="#F8F9FA" Padding="20" Margin="0,0,15,0">
                    <StackPanel>
                       
                        <!-- 이미지 선택 버튼 -->
                        <Button x:Name="SelectImageButton" Content="이미지 파일 선택" 
                                Height="40" Width="180" Margin="0,0,0,15"
                                Background="#5E81AC" Foreground="White" BorderThickness="0"
                                Click="SelectImageButton_Click" HorizontalAlignment="Center"/>
                        
                        <!-- 선택된 파일 경로 -->
                        <TextBlock x:Name="SelectedImagePath" Text="선택된 파일이 없습니다." 
                                   FontSize="12" Foreground="#666666" TextWrapping="Wrap" 
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        
                        <!-- 이미지 미리보기 -->
                        <Border BorderBrush="#D8DEE9" BorderThickness="2" 
                                CornerRadius="5" Background="White" Padding="10">
                            <Image x:Name="ProductImagePreview" Width="280" Height="220" 
                                   Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- 오른쪽: 제품 정보 입력 폼 -->
                <Border Grid.Column="1" BorderBrush="#D8DEE9" BorderThickness="1" CornerRadius="5" 
                        Background="#F8F9FA" Padding="20" Margin="15,0,0,0">
                    <StackPanel>
                        <TextBlock Text="제품 정보 입력" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="#2E3440" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                        
                        <!-- 품목명 -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="품목명:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="ProductNameTextBox" Height="35" 
                                     Padding="10,0" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- 카테고리 -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="카테고리:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CategoryComboBox" Height="35" 
                                      VerticalContentAlignment="Center" Padding="10,0">
                                <ComboBoxItem Content="주류"/>
                                <ComboBoxItem Content="음료"/>
                                <ComboBoxItem Content="기타"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- 상품가격 -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="상품가격:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="PriceTextBox" Height="35" 
                                     Padding="10,0" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- 초기수량 -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="초기수량:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="StockQuantityTextBox" Height="35" 
                                     Padding="10,0" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- 버튼 영역 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="RegisterButton" Content="등록" Width="100" Height="40" Margin="0,0,15,0"
                                    Background="#5E81AC" Foreground="White" BorderThickness="0"
                                    Click="RegisterButton_Click"/>
                            <Button x:Name="ResetButton" Content="초기화" Width="100" Height="40"
                                    Background="#D08770" Foreground="White" BorderThickness="0"
                                    Click="ResetButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
