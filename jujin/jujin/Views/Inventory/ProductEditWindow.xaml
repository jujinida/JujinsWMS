<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="jujin.Views.Inventory.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="제품 수정" Height="750" Width="1200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Background="#ECEFF4">
        <Border BorderBrush="#D8DEE9" BorderThickness="2" CornerRadius="5" Margin="20">
            <Grid Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 왼쪽: 제품 이미지 -->
                <Border Grid.Column="0" BorderBrush="#D8DEE9" BorderThickness="1" CornerRadius="5" 
                        Background="#F8F9FA" Padding="20" Margin="0,0,15,0">
                    <StackPanel>
                        <TextBlock Text="제품 이미지" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#2E3440" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                        
                        <!-- 이미지 미리보기 -->
                        <Border BorderBrush="#D8DEE9" BorderThickness="2" 
                                CornerRadius="5" Background="White" Padding="10">
                            <Image x:Name="ProductImagePreview" Width="350" Height="280" 
                                   Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- 이미지 선택 버튼 -->
                        <Button x:Name="SelectImageButton" Content="이미지 변경" 
                                Height="40" Width="120" Margin="0,15,0,10"
                                Background="#5E81AC" Foreground="White" BorderThickness="0"
                                Click="SelectImageButton_Click" HorizontalAlignment="Center"/>
                        
                        <!-- 선택된 파일 경로 -->
                        <TextBlock x:Name="SelectedImagePath" Text="현재 이미지 유지" 
                                   FontSize="12" Foreground="#666666" TextWrapping="Wrap" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        
                        <!-- 이미지 URL 표시 -->
                        <TextBlock x:Name="ImageUrlTextBlock" Text="이미지 없음" 
                                   FontSize="12" Foreground="#666666" TextWrapping="Wrap" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- 오른쪽: 제품 정보 입력 폼 -->
                <Border Grid.Column="1" BorderBrush="#D8DEE9" BorderThickness="1" CornerRadius="5" 
                        Background="#F8F9FA" Padding="20" Margin="15,0,0,0">
                    <StackPanel>
                        <TextBlock Text="제품 정보" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#2E3440" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                        
                        <!-- 품목코드 (읽기 전용) -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="품목코드:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="ProductIdTextBox" Height="35" 
                                     Padding="10,0" VerticalContentAlignment="Center"
                                     IsReadOnly="True" Background="#F5F5F5"/>
                        </StackPanel>
                        
                        <!-- 품목명 -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="품목명:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="ProductNameTextBox" Height="35" 
                                     Padding="10,0" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- 카테고리 -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="카테고리:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="CategoryComboBox" Height="35" 
                                      VerticalContentAlignment="Center" Padding="10,0">
                                <ComboBoxItem Content="주류"/>
                                <ComboBoxItem Content="음료"/>
                                <ComboBoxItem Content="기타"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- 상품가격 -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="상품가격:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="PriceTextBox" Height="35" 
                                     Padding="10,0" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <!-- 재고량 (읽기 전용) -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="재고량:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="StockQuantityTextBox" Height="35" 
                                     Padding="10,0" VerticalContentAlignment="Center"
                                     IsReadOnly="True" Background="#F5F5F5" 
                                     Foreground="#666666"/>
                        </StackPanel>
                        
                        <!-- 버튼 영역 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="SaveButton" Content="저장" Width="100" Height="40" Margin="0,0,15,0"
                                    Background="#5E81AC" Foreground="White" BorderThickness="0"
                                    Click="SaveButton_Click"/>
                            <Button x:Name="CancelButton" Content="취소" Width="100" Height="40"
                                    Background="#D08770" Foreground="White" BorderThickness="0"
                                    Click="CancelButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
