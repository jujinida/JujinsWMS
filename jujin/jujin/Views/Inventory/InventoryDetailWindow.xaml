<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="jujin.Views.Inventory.InventoryDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="재고 상세 정보" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#ECEFF4">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 제목 -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="재고 상세 정보" FontSize="24" FontWeight="Bold" 
                   Foreground="#2E3440" Margin="0,0,0,20"/>
        
        <!-- 왼쪽: 제품 정보 -->
        <Border Grid.Row="1" Grid.Column="0" Background="White" BorderBrush="#D8DEE9" BorderThickness="1" 
                CornerRadius="5" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 제품 이미지 -->
                <Image Grid.Row="0" x:Name="ProductImage" Width="200" Height="200" 
                       Margin="0,0,0,20" Stretch="Uniform" HorizontalAlignment="Center"/>
                
                <!-- 제품 정보 -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="품목코드:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" x:Name="ProductIdTextBlock"/>
                </Grid>
                
                <Grid Grid.Row="2" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="품목명:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" x:Name="ProductNameTextBlock"/>
                </Grid>
                
                <Grid Grid.Row="3" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="카테고리:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" x:Name="CategoryTextBlock"/>
                </Grid>
                
                <Grid Grid.Row="4" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="안전재고량:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" x:Name="SafetyStockTextBlock"/>
                </Grid>
                
                <Grid Grid.Row="5" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="현재고:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" x:Name="CurrentStockTextBlock"/>
                </Grid>
                
                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="상태:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" x:Name="StatusTextBlock" FontWeight="SemiBold"/>
                </Grid>
            </Grid>
        </Border>
        
        <!-- 오른쪽: 창고별 재고 현황 -->
        <Border Grid.Row="1" Grid.Column="2" Background="White" BorderBrush="#D8DEE9" BorderThickness="1" 
                CornerRadius="5" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="창고별 재고 현황" FontSize="18" FontWeight="Bold" 
                           Foreground="#2E3440" Margin="0,0,0,15"/>
                
                <DataGrid Grid.Row="1" x:Name="WarehouseDataGrid" AutoGenerateColumns="False" 
                          CanUserAddRows="False" CanUserDeleteRows="False"
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F8F9FA" RowBackground="White">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="창고" Binding="{Binding WarehouseName}" Width="*"/>
                        <DataGridTextColumn Header="재고량" Binding="{Binding StockQuantity}" Width="*"/>
                        
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- 버튼 -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="닫기" Width="80" Height="35" Margin="0,0,10,0"
                    Background="#95A5A6" Foreground="White" BorderThickness="0"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
