<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="jujin.Views.Inventory.ReceivingRegistrationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#ECEFF4">
        <Border BorderBrush="#D8DEE9" BorderThickness="2" CornerRadius="5" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">
                    <!-- 제목 -->
                    <TextBlock Text="입고 등록" FontSize="28" FontWeight="Bold" 
                               Foreground="#2E3440" Margin="0,0,0,30"/>
                    
                    <!-- 등록 폼 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 입고일 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="입고일:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <DatePicker Grid.Row="0" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                    VerticalContentAlignment="Center"/>
                        
                        <!-- 품목 선택 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="품목:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                  VerticalContentAlignment="Center" Padding="10,0">
                            <ComboBoxItem Content="ITEM001 - 스마트폰"/>
                            <ComboBoxItem Content="ITEM002 - 배터리"/>
                            <ComboBoxItem Content="ITEM003 - LCD패널"/>
                            <ComboBoxItem Content="ITEM004 - 케이스"/>
                            <ComboBoxItem Content="ITEM005 - 충전기"/>
                        </ComboBox>
                        
                        <!-- 입고 수량 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="입고 수량:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 단위 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="단위:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                  VerticalContentAlignment="Center" Padding="10,0">
                            <ComboBoxItem Content="개"/>
                            <ComboBoxItem Content="kg"/>
                            <ComboBoxItem Content="g"/>
                            <ComboBoxItem Content="L"/>
                            <ComboBoxItem Content="ml"/>
                            <ComboBoxItem Content="박스"/>
                            <ComboBoxItem Content="팩"/>
                        </ComboBox>
                        
                        <!-- 거래처 정보 -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="거래처:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 담당자 -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="담당자:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 입고 사유 -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="입고 사유:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <ComboBox Grid.Row="6" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                  VerticalContentAlignment="Center" Padding="10,0">
                            <ComboBoxItem Content="정상 구매"/>
                            <ComboBoxItem Content="반품 입고"/>
                            <ComboBoxItem Content="재고 보충"/>
                            <ComboBoxItem Content="기타"/>
                        </ComboBox>
                        
                        <!-- 비고 -->
                        <TextBlock Grid.Row="7" Grid.Column="0" Text="비고:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="7" Grid.Column="1" Height="80" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Top" TextWrapping="Wrap"
                                 AcceptsReturn="True"/>
                        
                        <!-- 버튼 영역 -->
                        <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" 
                                    HorizontalAlignment="Right" Margin="10,30,0,0">
                            <Button Content="등록" Width="100" Height="40" Margin="0,0,10,0"
                                    Background="#5E81AC" Foreground="White" BorderThickness="0"/>
                            <Button Content="초기화" Width="100" Height="40"
                                    Background="#D08770" Foreground="White" BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
