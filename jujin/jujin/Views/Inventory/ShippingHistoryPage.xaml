<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="jujin.Views.Inventory.ShippingHistoryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#ECEFF4">
        <Border BorderBrush="#D8DEE9" BorderThickness="2" CornerRadius="5" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 제목 -->
                <TextBlock Grid.Row="0" Text="출고내역 조회" FontSize="28" FontWeight="Bold" 
                           Foreground="#2E3440" Margin="30,20,30,20"/>
                
                <!-- 검색 조건 -->
                <Grid Grid.Row="1" Margin="30,0,30,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="품목코드:" VerticalAlignment="Center" 
                               Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="ProductIdTextBox" Grid.Column="1" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                    
                    <TextBlock Grid.Column="2" Text="품목명:" VerticalAlignment="Center" 
                               Margin="20,0,10,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="ProductNameTextBox" Grid.Column="3" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                    
                    <TextBlock Grid.Column="4" Text="조회기간:" VerticalAlignment="Center" 
                               Margin="20,0,10,0" FontWeight="SemiBold"/>
                    <DatePicker x:Name="SearchDatePicker" Grid.Column="5" Height="35" VerticalContentAlignment="Center"/>
                    
                    <Button Grid.Column="7" Content="검색" Width="80" Height="35"
                            Background="#5E81AC" Foreground="White" BorderThickness="0"
                            Click="SearchButton_Click"/>
                </Grid>
                
                <!-- 결과 테이블 -->
                <Border Grid.Row="2" BorderBrush="#BDC3C7" BorderThickness="1" Margin="30,0,30,30">
                    <DataGrid x:Name="ShippingHistoryDataGrid" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA" RowBackground="White">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="기록번호" Binding="{Binding LogId}" Width="100"/>
                            <DataGridTextColumn Header="출고일" Binding="{Binding LogDate, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="150"/>
                            <DataGridTextColumn Header="품목번호" Binding="{Binding ProductId}" Width="100"/>
                            <DataGridTextColumn Header="품목명" Binding="{Binding ProductName}" Width="200"/>
                            <DataGridTextColumn Header="출고수량" Binding="{Binding QuantityChanged}" Width="100"/>
                            <DataGridTextColumn Header="변동후 재고수량" Binding="{Binding CurrentQuantity}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>