<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="jujin.Views.Inventory.ShippingDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="제품 출고" Height="900" Width="1350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#ECEFF4">
    <Border BorderBrush="#D8DEE9" BorderThickness="2" CornerRadius="5" Margin="20">
        <Grid Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.ColumnSpan="2" Text="제품 출고 처리" FontSize="24" FontWeight="Bold" 
                       Foreground="#2E3440" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <!-- Left: Product Image -->
            <Border Grid.Column="0" Grid.Row="1" BorderBrush="#D8DEE9" BorderThickness="1" CornerRadius="5" 
                    Background="#F8F9FA" Padding="20" Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="제품 이미지" FontSize="16" FontWeight="SemiBold" 
                               Foreground="#2E3440" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                    
                    <!-- 이미지 미리보기 -->
                    <Border BorderBrush="#D8DEE9" BorderThickness="2" 
                            CornerRadius="5" Background="White" Padding="10">
                        <Image x:Name="ProductImagePreview" Width="350" Height="280" 
                               Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- 이미지 URL 표시 -->
                    <TextBlock x:Name="ImageUrlTextBlock" Text="이미지 없음" 
                               FontSize="12" Foreground="#666666" TextWrapping="Wrap" 
                               HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- Right: Product Details -->
            <Border Grid.Column="1" Grid.Row="1" BorderBrush="#D8DEE9" BorderThickness="1" CornerRadius="5" 
                    Background="#F8F9FA" Padding="20" Margin="15,0,0,0">
                <StackPanel>
                    <TextBlock Text="제품 상세 정보" FontSize="16" FontWeight="SemiBold" 
                               Foreground="#2E3440" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="품목코드:" FontWeight="SemiBold" Width="80" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ProductIdTextBlock" FontSize="14" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="품목명:" FontWeight="SemiBold" Width="80" VerticalAlignment="Center"/>
                        <TextBlock x:Name="ProductNameTextBlock" FontSize="14" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="카테고리:" FontWeight="SemiBold" Width="80" VerticalAlignment="Center"/>
                        <TextBlock x:Name="CategoryTextBlock" FontSize="14" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="가격:" FontWeight="SemiBold" Width="80" VerticalAlignment="Center"/>
                        <TextBlock x:Name="PriceTextBlock" FontSize="14" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="총재고:" FontWeight="SemiBold" Width="80" VerticalAlignment="Center"/>
                        <TextBox x:Name="TotalStockTextBox" IsReadOnly="True" Height="30" Width="200" 
                                 Padding="5,0" VerticalContentAlignment="Center" Background="#EFEFEF" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- 창고별 재고량 -->
                    <TextBlock Text="창고별 재고량" FontSize="14" FontWeight="SemiBold" 
                               Foreground="#2E3440" Margin="0,0,0,10"/>
                    
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- A-1 창고 -->
                        <Border Grid.Column="0" Grid.Row="0" x:Name="A1WarehouseBorder" Tag="1"
                                Background="#F8F9FA" BorderBrush="#D8DEE9" BorderThickness="1" 
                                CornerRadius="3" Padding="10" Margin="0,0,5,5"
                                MouseLeftButtonDown="WarehouseBorder_MouseLeftButtonDown">
                            <StackPanel>
                                <TextBlock Text="A-1 창고" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock x:Name="A1StockTextBlock" Text="재고: 0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- A-2 창고 -->
                        <Border Grid.Column="1" Grid.Row="0" x:Name="A2WarehouseBorder" Tag="2"
                                Background="#F8F9FA" BorderBrush="#D8DEE9" BorderThickness="1" 
                                CornerRadius="3" Padding="10" Margin="5,0,5,5"
                                MouseLeftButtonDown="WarehouseBorder_MouseLeftButtonDown">
                            <StackPanel>
                                <TextBlock Text="A-2 창고" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock x:Name="A2StockTextBlock" Text="재고: 0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- A-3 창고 -->
                        <Border Grid.Column="2" Grid.Row="0" x:Name="A3WarehouseBorder" Tag="3"
                                Background="#F8F9FA" BorderBrush="#D8DEE9" BorderThickness="1" 
                                CornerRadius="3" Padding="10" Margin="5,0,0,5"
                                MouseLeftButtonDown="WarehouseBorder_MouseLeftButtonDown">
                            <StackPanel>
                                <TextBlock Text="A-3 창고" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock x:Name="A3StockTextBlock" Text="재고: 0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- B-1 창고 -->
                        <Border Grid.Column="0" Grid.Row="1" x:Name="B1WarehouseBorder" Tag="4"
                                Background="#F8F9FA" BorderBrush="#D8DEE9" BorderThickness="1" 
                                CornerRadius="3" Padding="10" Margin="0,5,5,0"
                                MouseLeftButtonDown="WarehouseBorder_MouseLeftButtonDown">
                            <StackPanel>
                                <TextBlock Text="B-1 창고" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock x:Name="B1StockTextBlock" Text="재고: 0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- B-2 창고 -->
                        <Border Grid.Column="1" Grid.Row="1" x:Name="B2WarehouseBorder" Tag="5"
                                Background="#F8F9FA" BorderBrush="#D8DEE9" BorderThickness="1" 
                                CornerRadius="3" Padding="10" Margin="5,5,5,0"
                                MouseLeftButtonDown="WarehouseBorder_MouseLeftButtonDown">
                            <StackPanel>
                                <TextBlock Text="B-2 창고" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock x:Name="B2StockTextBlock" Text="재고: 0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- C-1 창고 -->
                        <Border Grid.Column="2" Grid.Row="1" x:Name="C1WarehouseBorder" Tag="6"
                                Background="#F8F9FA" BorderBrush="#D8DEE9" BorderThickness="1" 
                                CornerRadius="3" Padding="10" Margin="5,5,0,0"
                                MouseLeftButtonDown="WarehouseBorder_MouseLeftButtonDown">
                            <StackPanel>
                                <TextBlock Text="C-1 창고" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock x:Name="C1StockTextBlock" Text="재고: 0" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                        <TextBlock Text="출고량:" FontWeight="SemiBold" Width="80" VerticalAlignment="Center"/>
                        <TextBox x:Name="ShippingQuantityTextBox" Height="35" Width="200" 
                                 Padding="10,0" VerticalContentAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Buttons -->
            <StackPanel Grid.ColumnSpan="2" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button x:Name="ConfirmButton" Content="확인" Width="120" Height="45" Margin="0,0,20,0"
                        Background="#D08770" Foreground="White" BorderThickness="0"
                        Click="ConfirmButton_Click"/>
                <Button x:Name="CancelButton" Content="취소" Width="120" Height="45"
                        Background="#5E81AC" Foreground="White" BorderThickness="0"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
