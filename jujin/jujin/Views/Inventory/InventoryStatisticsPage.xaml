<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="jujin.Views.Inventory.InventoryStatisticsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#ECEFF4">
        <Border BorderBrush="#D8DEE9" BorderThickness="2" CornerRadius="5" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 제목 -->
                <TextBlock Grid.Row="0" Text="재고 통계" FontSize="28" FontWeight="Bold" 
                           Foreground="#2E3440" Margin="30,20,30,20"/>
                
                <!-- 검색 조건 -->
                <Grid Grid.Row="1" Margin="30,0,30,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="품목명:" VerticalAlignment="Center" 
                               Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <TextBox Grid.Column="1" x:Name="ProductNameTextBox" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                    
                    <TextBlock Grid.Column="2" Text="카테고리:" VerticalAlignment="Center" 
                               Margin="20,0,10,0" FontWeight="SemiBold"/>
                    <ComboBox Grid.Column="3" x:Name="CategoryComboBox" Height="35" VerticalContentAlignment="Center" Padding="10,0">
                        <ComboBoxItem Content="전체"/>
                        <ComboBoxItem Content="주류"/>
                        <ComboBoxItem Content="음료"/>
                        <ComboBoxItem Content="기타"/>                        
                    </ComboBox>
                    
                    
                    
                    <Button Grid.Column="7" Content="검색" Width="80" Height="35"
                            Background="#5E81AC" Foreground="White" BorderThickness="0"
                            Click="SearchButton_Click"/>
                </Grid>
                
                <!-- 결과 테이블 -->
                <Border Grid.Row="2" BorderBrush="#BDC3C7" BorderThickness="1" Margin="30,0,30,30">
                    <DataGrid x:Name="StatisticsDataGrid" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA" RowBackground="White"
                              MouseDoubleClick="StatisticsDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="품목코드" Binding="{Binding ItemCode}" Width="100"/>
                            <DataGridTextColumn Header="품목명" Binding="{Binding ItemName}" Width="150"/>
                            <DataGridTextColumn Header="카테고리" Binding="{Binding Category}" Width="100"/>
                            <DataGridTextColumn Header="재고회전율" Binding="{Binding DailyChangeRate}" Width="100"/>
                            <DataGridTextColumn Header="재고소진지수" Binding="{Binding MonthlyChangeRate}" Width="120"/>
                            <DataGridTextColumn Header="월매출량" Binding="{Binding QuarterlyChangeRate}" Width="100"/>
                            
                            <DataGridTemplateColumn Header="작업" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="상세보기" Width="80" Height="25"
                                                    Background="#3498DB" Foreground="White" BorderThickness="0"
                                                    FontSize="12" Click="DetailButton_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
