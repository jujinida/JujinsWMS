<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="jujin.Views.Inventory.ReceivingHistoryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#ECEFF4">
        <Border BorderBrush="#D8DEE9" BorderThickness="2" CornerRadius="5" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 제목 -->
                <TextBlock Grid.Row="0" Text="입고 내역 조회" FontSize="28" FontWeight="Bold" 
                           Foreground="#2E3440" Margin="30,20,30,20"/>
                
                <!-- 검색 조건 -->
                <Grid Grid.Row="1" Margin="30,0,30,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="입고일:" VerticalAlignment="Center" 
                               Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <DatePicker Grid.Column="1" Height="35" VerticalContentAlignment="Center"/>
                    
                    <TextBlock Grid.Column="2" Text="품목:" VerticalAlignment="Center" 
                               Margin="20,0,10,0" FontWeight="SemiBold"/>
                    <ComboBox Grid.Column="3" Height="35" VerticalContentAlignment="Center" Padding="10,0">
                        <ComboBoxItem Content="전체"/>
                        <ComboBoxItem Content="ITEM001 - 스마트폰"/>
                        <ComboBoxItem Content="ITEM002 - 배터리"/>
                        <ComboBoxItem Content="ITEM003 - LCD패널"/>
                        <ComboBoxItem Content="ITEM004 - 케이스"/>
                        <ComboBoxItem Content="ITEM005 - 충전기"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Column="4" Text="거래처:" VerticalAlignment="Center" 
                               Margin="20,0,10,0" FontWeight="SemiBold"/>
                    <TextBox Grid.Column="5" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                    
                    <Button Grid.Column="7" Content="검색" Width="80" Height="35"
                            Background="#5E81AC" Foreground="White" BorderThickness="0"/>
                </Grid>
                
                <!-- 결과 테이블 -->
                <Border Grid.Row="2" BorderBrush="#BDC3C7" BorderThickness="1" Margin="30,0,30,30">
                    <DataGrid x:Name="ReceivingDataGrid" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F8F9FA" RowBackground="White">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="입고번호" Binding="{Binding ReceivingId}" Width="100"/>
                            <DataGridTextColumn Header="입고일" Binding="{Binding ReceivingDate}" Width="100"/>
                            <DataGridTextColumn Header="품목코드" Binding="{Binding ItemCode}" Width="100"/>
                            <DataGridTextColumn Header="품목명" Binding="{Binding ItemName}" Width="150"/>
                            <DataGridTextColumn Header="입고수량" Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="단위" Binding="{Binding Unit}" Width="60"/>
                            <DataGridTextColumn Header="거래처" Binding="{Binding Supplier}" Width="120"/>
                            <DataGridTextColumn Header="담당자" Binding="{Binding Manager}" Width="80"/>
                            <DataGridTextColumn Header="입고사유" Binding="{Binding Reason}" Width="100"/>
                            <DataGridTextColumn Header="비고" Binding="{Binding Remarks}" Width="150"/>
                            <DataGridTemplateColumn Header="작업" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="수정" Width="50" Height="25" Margin="0,0,5,0"
                                                    Background="#3498DB" Foreground="White" BorderThickness="0"
                                                    FontSize="12"/>
                                            <Button Content="삭제" Width="50" Height="25"
                                                    Background="#E74C3C" Foreground="White" BorderThickness="0"
                                                    FontSize="12"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
