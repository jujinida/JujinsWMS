<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="jujin.Views.Main.MainScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="재고관리 시스템" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header Area -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#2E3440">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Logo/Image -->
            <Image Grid.Column="0" Height="50" Width="50" Margin="15,0,0,0"
                   Source="{Binding Profile_Url}" VerticalAlignment="Center"/>
            
            <!-- Welcome Text -->
            <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0"
                       FontSize="20" FontWeight="Bold" Foreground="White"
                       Text="{Binding EmployeeName, StringFormat={}{0}님 환영합니다.}"/>
            
            <!-- Department Name -->
            <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="0,0,20,0"
                       FontSize="16" FontWeight="SemiBold" Foreground="White"
                       Text="{Binding DepartmentName, StringFormat={}{0}부서}"/>
            
            <!-- 재고관리 Button -->
            <Button Grid.Column="3" Content="재고관리" Height="35" Width="80"
                    VerticalAlignment="Center" Margin="0,0,10,0"
                    Background="#5E81AC" Foreground="White" BorderThickness="0"
                    Click="InventoryManagementButton_Click"/>
            
            <!-- 인사관리 Button -->
            <Button Grid.Column="4" Content="인사관리" Height="35" Width="80"
                    VerticalAlignment="Center" Margin="0,0,10,0"
                    Background="#5E81AC" Foreground="White" BorderThickness="0"
                    Click="HRManagementButton_Click"/>
            
            <!-- Logout Button -->
            <Button Grid.Column="5" Content="로그아웃" Height="35" Width="80"
                    VerticalAlignment="Center" Margin="0,0,20,0"
                    Background="#D08770" Foreground="White" BorderThickness="0"
                    Click="LogoutButton_Click"/>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <ContentControl x:Name="MainContentControl"/>
        </Grid>
    </Grid>
</Window>