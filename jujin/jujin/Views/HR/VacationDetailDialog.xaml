<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="jujin.Views.HR.VacationDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="휴가 신청 상세" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#FFFFFF">
        <Border BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5" Margin="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">
                    <!-- 제목 -->
                    <TextBlock Text="휴가 신청 상세 정보" FontSize="24" FontWeight="Bold" 
                               Foreground="#2C3E50" Margin="0,0,0,30"/>
                    
                    <!-- 휴가 정보 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 사원번호 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="사원번호:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBlock x:Name="EmployeeIdText" Grid.Row="0" Grid.Column="1" 
                                   VerticalAlignment="Center" Margin="10,10,0,10"/>
                        
                        <!-- 이름 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="이름:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBlock x:Name="EmployeeNameText" Grid.Row="1" Grid.Column="1" 
                                   VerticalAlignment="Center" Margin="10,10,0,10"/>
                        
                        <!-- 부서 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="부서:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBlock x:Name="DepartmentText" Grid.Row="2" Grid.Column="1" 
                                   VerticalAlignment="Center" Margin="10,10,0,10"/>
                        
                        <!-- 직급 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="직급:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBlock x:Name="PositionText" Grid.Row="3" Grid.Column="1" 
                                   VerticalAlignment="Center" Margin="10,10,0,10"/>
                        
                        <!-- 휴가 시작일 -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="휴가 시작일:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBlock x:Name="StartDateText" Grid.Row="4" Grid.Column="1" 
                                   VerticalAlignment="Center" Margin="10,10,0,10"/>
                        
                        <!-- 휴가 종료일 -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="휴가 종료일:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBlock x:Name="EndDateText" Grid.Row="5" Grid.Column="1" 
                                   VerticalAlignment="Center" Margin="10,10,0,10"/>
                        
                        <!-- 휴가 일수 -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="휴가 일수:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBlock x:Name="VacationDaysText" Grid.Row="6" Grid.Column="1" 
                                   VerticalAlignment="Center" Margin="10,10,0,10"/>
                        
                        <!-- 잔여 휴가일수 -->
                        <TextBlock Grid.Row="7" Grid.Column="0" Text="잔여 휴가일수:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBlock x:Name="RemainingDaysText" Grid.Row="7" Grid.Column="1" 
                                   VerticalAlignment="Center" Margin="10,10,0,10"/>
                        
                        <!-- 휴가 사유 -->
                        <TextBlock Grid.Row="8" Grid.Column="0" Text="휴가 사유:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBlock x:Name="VacationReasonText" Grid.Row="8" Grid.Column="1" 
                                   VerticalAlignment="Center" Margin="10,10,0,10" TextWrapping="Wrap"/>
                        
                        <!-- 승인 상태 -->
                        <TextBlock Grid.Row="9" Grid.Column="0" Text="승인 상태:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBlock x:Name="ApprovalStatusText" Grid.Row="9" Grid.Column="1" 
                                   VerticalAlignment="Center" Margin="10,10,0,10"/>
                        
                        <!-- 버튼 영역 -->
                        <StackPanel Grid.Row="10" Grid.Column="1" Orientation="Horizontal" 
                                    HorizontalAlignment="Right" Margin="10,30,0,0">
                            <Button x:Name="ApproveButton" Content="승인" Width="80" Height="35" Margin="0,0,10,0"
                                    Background="#27AE60" Foreground="White" BorderThickness="0"
                                    Click="ApproveButton_Click"/>
                            <Button x:Name="RejectButton" Content="거부" Width="80" Height="35" Margin="0,0,10,0"
                                    Background="#E74C3C" Foreground="White" BorderThickness="0"
                                    Click="RejectButton_Click"/>
                            <Button Content="닫기" Width="80" Height="35"
                                    Background="#95A5A6" Foreground="White" BorderThickness="0"
                                    Click="CloseButton_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
