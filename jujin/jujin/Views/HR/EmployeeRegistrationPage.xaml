<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="jujin.Views.HR.EmployeeRegistrationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#FFFFFF">
        <Border BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5" Margin="10">
            <Grid Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 제목 -->
                <TextBlock Grid.ColumnSpan="2" Text="직원 등록" FontSize="28" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,0,0,30"/>

                <!-- 왼쪽: 프로필 이미지 등록 -->
                <Border Grid.Column="0" Grid.Row="1" BorderBrush="#BDC3C7" BorderThickness="1" 
                        CornerRadius="5" Background="#F8F9FA" Padding="20" Margin="0,0,15,0">
                    <StackPanel>
                        <!-- 이미지 선택 버튼 -->
                        <Button x:Name="SelectImageButton" Content="이미지 선택" Width="120" Height="35"
                        Background="#3498DB" Foreground="White" BorderThickness="0"
                        Margin="0,20,0,10" HorizontalAlignment="Center" Click="SelectImageButton_Click"/>

                        <!-- 선택된 파일 경로 -->
                        <TextBlock x:Name="SelectedFilePathTextBlock" Text="선택된 파일이 없습니다" 
                         FontSize="12" Foreground="#666666" TextWrapping="Wrap" 
                         HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        <TextBlock Text="프로필 이미지" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#2C3E50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                        <!-- 이미지 미리보기 -->
                        <Border BorderBrush="#BDC3C7" BorderThickness="2" 
                                CornerRadius="5" Background="White" Padding="10">
                            <Image x:Name="ProfileImagePreview" Width="240" Height="180" 
                                   Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>


                    </StackPanel>
                </Border>

                <!-- 오른쪽: 직원 정보 입력 -->
                <Border Grid.Column="1" Grid.Row="1" BorderBrush="#BDC3C7" BorderThickness="1" 
                        CornerRadius="5" Background="#F8F9FA" Padding="20" Margin="15,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="직원 정보" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="#2C3E50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                            <!-- 첫 번째 줄: 이름, 부서, 직급 -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="이름" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <TextBox x:Name="NameTextBox" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                    <TextBlock Text="부서" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="DepartmentComboBox" Height="35" VerticalContentAlignment="Center" Padding="10,0">
                                        <ComboBoxItem Content="IT"/>
                                        <ComboBoxItem Content="마케팅"/>
                                        <ComboBoxItem Content="인사"/>
                                        <ComboBoxItem Content="재무"/>
                                        <ComboBoxItem Content="영업"/>
                                        <ComboBoxItem Content="기획"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                    <TextBlock Text="직급" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="PositionComboBox" Height="35" VerticalContentAlignment="Center" Padding="10,0">
                                        <ComboBoxItem Content="사원"/>
                                        <ComboBoxItem Content="대리"/>
                                        <ComboBoxItem Content="과장"/>
                                        <ComboBoxItem Content="차장"/>
                                        <ComboBoxItem Content="부장"/>
                                        <ComboBoxItem Content="이사"/>
                                        <ComboBoxItem Content="상무"/>
                                        <ComboBoxItem Content="전무"/>
                                        <ComboBoxItem Content="사장"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- 두 번째 줄: 입사일, 생년월일, 전화번호 -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="입사일" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <DatePicker x:Name="HireDatePicker" Height="35" VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                    <TextBlock Text="생년월일" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <DatePicker x:Name="BirthDatePicker" Height="35" VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                    <TextBlock Text="급여" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <TextBox x:Name="SalaryTextBox" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <!-- 세 번째 줄: 주소, 이메일, 급여 -->
                            <Grid Margin="0,0,0,25">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>

                                </Grid.ColumnDefinitions>



                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="이메일" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <TextBox x:Name="EmailTextBox" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="전화번호" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <TextBox x:Name="PhoneTextBox" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                                </StackPanel>

                            </Grid>
                            <Grid Margin="0,0,0,25">
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="주소" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <TextBox x:Name="AddressTextBox" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                                </StackPanel>

                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- 하단: 버튼 영역 -->
                <StackPanel Grid.ColumnSpan="2" Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button x:Name="RegisterButton" Content="등록" Width="120" Height="45" Margin="0,0,20,0"
                            Background="#27AE60" Foreground="White" BorderThickness="0" Click="RegisterButton_Click"/>
                    <Button x:Name="ResetButton" Content="초기화" Width="120" Height="45"
                            Background="#E74C3C" Foreground="White" BorderThickness="0" Click="ResetButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
