<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="jujin.Views.HR.EmployeeEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="직원 정보 수정" Height="600" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#FFFFFF">
        <Border BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5" Margin="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">
                    <!-- 제목 -->
                    <TextBlock Text="직원 정보 수정" FontSize="24" FontWeight="Bold" 
                               Foreground="#2C3E50" Margin="0,0,0,30"/>
                    
                    <!-- 수정 폼 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 사원번호 (읽기 전용) -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="사원번호:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox x:Name="EmployeeIdTextBox" Grid.Row="0" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                        
                        <!-- 이름 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="이름:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox x:Name="EmployeeNameTextBox" Grid.Row="1" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 부서 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="부서:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <ComboBox x:Name="DepartmentComboBox" Grid.Row="2" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                  VerticalContentAlignment="Center" Padding="10,0">
                            <ComboBoxItem Content="개발팀"/>
                            <ComboBoxItem Content="마케팅팀"/>
                            <ComboBoxItem Content="인사팀"/>
                            <ComboBoxItem Content="재무팀"/>
                            <ComboBoxItem Content="영업팀"/>
                            <ComboBoxItem Content="기획팀"/>
                        </ComboBox>
                        
                        <!-- 직급 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="직급:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <ComboBox x:Name="PositionComboBox" Grid.Row="3" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                  VerticalContentAlignment="Center" Padding="10,0">
                            <ComboBoxItem Content="사원"/>
                            <ComboBoxItem Content="대리"/>
                            <ComboBoxItem Content="과장"/>
                            <ComboBoxItem Content="차장"/>
                            <ComboBoxItem Content="부장"/>
                            <ComboBoxItem Content="이사"/>
                            <ComboBoxItem Content="상무"/>
                            <ComboBoxItem Content="전무"/>
                            <ComboBoxItem Content="사장"/>
                        </ComboBox>
                        
                        <!-- 입사일 -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="입사일:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <DatePicker x:Name="HireDatePicker" Grid.Row="4" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                    VerticalContentAlignment="Center"/>
                        
                        <!-- 생년월일 -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="생년월일:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <DatePicker x:Name="BirthDatePicker" Grid.Row="5" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                    VerticalContentAlignment="Center"/>
                        
                        <!-- 전화번호 -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="전화번호:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox x:Name="PhoneNumberTextBox" Grid.Row="6" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 주소 -->
                        <TextBlock Grid.Row="7" Grid.Column="0" Text="주소:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox x:Name="AddressTextBox" Grid.Row="7" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 이메일 -->
                        <TextBlock Grid.Row="8" Grid.Column="0" Text="이메일:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox x:Name="EmailTextBox" Grid.Row="8" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 급여 -->
                        <TextBlock Grid.Row="9" Grid.Column="0" Text="급여:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox x:Name="SalaryTextBox" Grid.Row="9" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 버튼 영역 -->
                        <StackPanel Grid.Row="10" Grid.Column="1" Orientation="Horizontal" 
                                    HorizontalAlignment="Right" Margin="10,30,0,0">
                            <Button Content="저장" Width="80" Height="35" Margin="0,0,10,0"
                                    Background="#27AE60" Foreground="White" BorderThickness="0"
                                    Click="SaveButton_Click"/>
                            <Button Content="취소" Width="80" Height="35"
                                    Background="#95A5A6" Foreground="White" BorderThickness="0"
                                    Click="CancelButton_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
