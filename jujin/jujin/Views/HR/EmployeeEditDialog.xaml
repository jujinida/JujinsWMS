<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="jujin.Views.HR.EmployeeEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="직원 정보 수정" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Background="#FFFFFF">
        <Border BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5" Margin="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 왼쪽: 이미지 영역 -->
                <Border Grid.Column="0" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Margin="0,0,10,0">
                    <StackPanel Margin="20" VerticalAlignment="Center">
                        <!-- 이미지 미리보기 -->
                        <Border BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5" 
                                Width="300" Height="300" Margin="0,0,0,20">
                            <Image x:Name="ProfileImagePreview" Stretch="Uniform" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- 이미지 선택 버튼 -->
                        <Button x:Name="SelectImageButton" Content="이미지 선택" Width="120" Height="35"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="SelectImageButton_Click"/>
                        
                        <!-- 선택된 파일 경로 -->
                        <TextBlock x:Name="SelectedFilePathTextBlock" Text="선택된 파일이 없습니다" 
                                   FontSize="12" Foreground="#7F8C8D" Margin="0,10,0,0" 
                                   TextWrapping="Wrap" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- 오른쪽: 입력 필드들 -->
                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- 제목 -->
                        <TextBlock Text="직원 정보 수정" FontSize="24" FontWeight="Bold" 
                                   Foreground="#2C3E50" Margin="0,0,0,30"/>
                        
                        <!-- 입력 필드들 (3개씩 한 줄) -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 첫 번째 줄: 이름, 부서, 직급 -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,20">
                                <TextBlock Text="이름" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="NameTextBox" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="5,0,5,20">
                                <TextBlock Text="부서" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="DepartmentComboBox" Height="35" VerticalContentAlignment="Center" Padding="10,0">
                                    <ComboBoxItem Content="IT"/>
                                    <ComboBoxItem Content="마케팅"/>
                                    <ComboBoxItem Content="인사"/>
                                    <ComboBoxItem Content="재무"/>
                                    <ComboBoxItem Content="영업"/>
                                    <ComboBoxItem Content="기획"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="10,0,0,20">
                                <TextBlock Text="직급" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <ComboBox x:Name="PositionComboBox" Height="35" VerticalContentAlignment="Center" Padding="10,0">
                                    <ComboBoxItem Content="사원"/>
                                    <ComboBoxItem Content="대리"/>
                                    <ComboBoxItem Content="과장"/>
                                    <ComboBoxItem Content="차장"/>
                                    <ComboBoxItem Content="부장"/>
                                    <ComboBoxItem Content="이사"/>
                                    <ComboBoxItem Content="상무"/>
                                    <ComboBoxItem Content="전무"/>
                                    <ComboBoxItem Content="사장"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- 두 번째 줄: 입사일, 생년월일, 급여 -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,20">
                                <TextBlock Text="입사일" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <DatePicker x:Name="HireDatePicker" Height="35" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="5,0,5,20">
                                <TextBlock Text="생년월일" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <DatePicker x:Name="BirthDatePicker" Height="35" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,0,0,20">
                                <TextBlock Text="급여" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="SalaryTextBox" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                            </StackPanel>
                                                       
                           

                            


                        </Grid>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <!-- 세 번째 줄: 주소, 이메일, 급여 -->


                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,5,20">
                                <TextBlock Text="이메일" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="EmailTextBox" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,10,20">
                                <TextBlock Text="전화번호" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="PhoneTextBox" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>                              
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,20">
                                <TextBlock Text="주소" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="AddressTextBox" Height="35" Padding="10,0" VerticalContentAlignment="Center"/>
                            </StackPanel>

                        </Grid>

                        <!-- 버튼 영역 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="저장" Width="80" Height="35" Margin="0,0,10,0"
                                    Background="#27AE60" Foreground="White" BorderThickness="0"
                                    Click="SaveButton_Click"/>
                            <Button Content="취소" Width="80" Height="35"
                                    Background="#95A5A6" Foreground="White" BorderThickness="0"
                                    Click="CancelButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
