<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="jujin.Views.HR.MonthCalendarDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="년월 선택" Height="400" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Background="#FFFFFF">
        <Border BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 제목 -->
                <TextBlock Grid.Row="0" Text="년월을 선택하세요" FontSize="20" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="20,20,20,10" HorizontalAlignment="Center"/>
                
                <!-- 달력 -->
                <Grid Grid.Row="1" Margin="20,0,20,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 년도 선택 -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Content="◀" Width="40" Height="35" 
                                Background="#95A5A6" Foreground="White" BorderThickness="0"
                                Click="PreviousYearButton_Click"/>
                        
                        <TextBlock x:Name="CurrentYearText" Grid.Column="1" Text="2025년" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                                   FontSize="18" FontWeight="Bold" Foreground="#2C3E50"/>
                        
                        <Button Grid.Column="2" Content="▶" Width="40" Height="35" 
                                Background="#95A5A6" Foreground="White" BorderThickness="0"
                                Click="NextYearButton_Click"/>
                    </Grid>
                    
                    <!-- 월 선택 그리드 -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 1월부터 12월까지 버튼들 -->
                        <Button Grid.Row="0" Grid.Column="0" Content="1월" Margin="5" Height="40"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="MonthButton_Click" Tag="1"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="2월" Margin="5" Height="40"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="MonthButton_Click" Tag="2"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="3월" Margin="5" Height="40"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="MonthButton_Click" Tag="3"/>
                        <Button Grid.Row="0" Grid.Column="3" Content="4월" Margin="5" Height="40"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="MonthButton_Click" Tag="4"/>
                        
                        <Button Grid.Row="1" Grid.Column="0" Content="5월" Margin="5" Height="40"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="MonthButton_Click" Tag="5"/>
                        <Button Grid.Row="1" Grid.Column="1" Content="6월" Margin="5" Height="40"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="MonthButton_Click" Tag="6"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="7월" Margin="5" Height="40"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="MonthButton_Click" Tag="7"/>
                        <Button Grid.Row="1" Grid.Column="3" Content="8월" Margin="5" Height="40"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="MonthButton_Click" Tag="8"/>
                        
                        <Button Grid.Row="2" Grid.Column="0" Content="9월" Margin="5" Height="40"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="MonthButton_Click" Tag="9"/>
                        <Button Grid.Row="2" Grid.Column="1" Content="10월" Margin="5" Height="40"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="MonthButton_Click" Tag="10"/>
                        <Button Grid.Row="2" Grid.Column="2" Content="11월" Margin="5" Height="40"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="MonthButton_Click" Tag="11"/>
                        <Button Grid.Row="2" Grid.Column="3" Content="12월" Margin="5" Height="40"
                                Background="#3498DB" Foreground="White" BorderThickness="0"
                                Click="MonthButton_Click" Tag="12"/>
                    </Grid>
                </Grid>
                
                <!-- 버튼들 -->
                <Grid Grid.Row="2" Margin="20,0,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" Content="취소" Height="40"
                            Background="#95A5A6" Foreground="White" BorderThickness="0"
                            Click="CancelButton_Click"/>
                    
                    <Button Grid.Column="2" Content="확인" Height="40"
                            Background="#27AE60" Foreground="White" BorderThickness="0"
                            Click="ConfirmButton_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
