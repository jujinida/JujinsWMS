<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="jujin.Views.HR.HRManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar Menu -->
        <Grid Grid.Column="0" Background="#ECF0F1">
            <StackPanel Margin="10">
                <Border CornerRadius="5" Margin="0,10,0,0">
                    <Button x:Name="EmployeeInfoBtn" Content="직원 기본 정보 관리" Height="50"
                            Background="#3498DB" Foreground="White" BorderThickness="0"
                            Click="EmployeeInfoButton_Click"/>
                </Border>
                
                <Border CornerRadius="5" Margin="0,10,0,0">
                    <Button x:Name="AttendanceBtn" Content="근태 관리" Height="50"
                            Background="#3498DB" Foreground="White" BorderThickness="0"
                            Click="AttendanceButton_Click"/>
                </Border>
                
                <Border CornerRadius="5" Margin="0,10,0,0">
                    <Button x:Name="PayrollBtn" Content="급여 관리" Height="50"
                            Background="#3498DB" Foreground="White" BorderThickness="0"
                            Click="PayrollButton_Click"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#FFFFFF">
            <Border BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5" Margin="10">
                <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
