<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="jujin.InventoryManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar Menu -->
        <Grid Grid.Column="0" Background="#3B4252">
            <StackPanel Margin="10">
                <Border CornerRadius="5" Margin="0,10,0,0">
                    <Button x:Name="ItemManagementBtn" Content="품목관리" Height="50"
                            Background="#4C566A" Foreground="White" BorderThickness="0"
                            Click="ItemManagementButton_Click"/>
                </Border>
                
                <Border CornerRadius="5" Margin="0,10,0,0">
                    <Button x:Name="ReceivingManagementBtn" Content="입고관리" Height="50"
                            Background="#4C566A" Foreground="White" BorderThickness="0"
                            Click="ReceivingManagementButton_Click"/>
                </Border>
                
                <Border CornerRadius="5" Margin="0,10,0,0">
                    <Button x:Name="ShippingManagementBtn" Content="출고관리" Height="50"
                            Background="#4C566A" Foreground="White" BorderThickness="0"
                            Click="ShippingManagementButton_Click"/>
                </Border>
                
                <Border CornerRadius="5" Margin="0,10,0,0">
                    <Button x:Name="InventoryStatusBtn" Content="재고현황" Height="50"
                            Background="#4C566A" Foreground="White" BorderThickness="0"
                            Click="InventoryStatusButton_Click"/>
                </Border>
                
                <Border CornerRadius="5" Margin="0,10,0,0">
                    <Button x:Name="InventoryStatisticsBtn" Content="재고통계" Height="50"
                            Background="#4C566A" Foreground="White" BorderThickness="0"
                            Click="InventoryStatisticsButton_Click"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#ECEFF4">
            <Border BorderBrush="#D8DEE9" BorderThickness="2" CornerRadius="5" Margin="10">
                <ContentControl x:Name="MainContentControl"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
