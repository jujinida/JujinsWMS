<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="jujin.ItemRegistrationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#ECEFF4">
        <Border BorderBrush="#D8DEE9" BorderThickness="2" CornerRadius="5" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">
                    <!-- 제목 -->
                    <TextBlock Text="품목 등록" FontSize="28" FontWeight="Bold" 
                               Foreground="#2E3440" Margin="0,0,0,30"/>
                    
                    <!-- 등록 폼 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 품목 코드 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="품목 코드:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 품목명 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="품목명:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 규격 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="규격:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 단위 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="단위:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                  VerticalContentAlignment="Center" Padding="10,0">
                            <ComboBoxItem Content="개"/>
                            <ComboBoxItem Content="kg"/>
                            <ComboBoxItem Content="g"/>
                            <ComboBoxItem Content="L"/>
                            <ComboBoxItem Content="ml"/>
                            <ComboBoxItem Content="박스"/>
                            <ComboBoxItem Content="팩"/>
                        </ComboBox>
                        
                        <!-- 안전재고량 -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="안전재고량:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 카테고리 -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="카테고리:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <ComboBox Grid.Row="5" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                  VerticalContentAlignment="Center" Padding="10,0">
                            <ComboBoxItem Content="원자재"/>
                            <ComboBoxItem Content="완제품"/>
                            <ComboBoxItem Content="반제품"/>
                            <ComboBoxItem Content="소모품"/>
                        </ComboBox>
                        
                        <!-- 공급업체 -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="공급업체:" 
                                   VerticalAlignment="Center" Margin="0,10" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Height="35" Margin="10,10,0,10" 
                                 Padding="10,0" VerticalContentAlignment="Center"/>
                        
                        <!-- 버튼 영역 -->
                        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" 
                                    HorizontalAlignment="Right" Margin="10,30,0,0">
                            <Button Content="등록" Width="100" Height="40" Margin="0,0,10,0"
                                    Background="#5E81AC" Foreground="White" BorderThickness="0"/>
                            <Button Content="초기화" Width="100" Height="40"
                                    Background="#D08770" Foreground="White" BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
